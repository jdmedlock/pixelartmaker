.wrapper {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  // grid-template-rows: 1fr 1fr 5fr 1fr;
  grid-gap: 5px;
  grid-auto-rows: minmax(auto, auto);
}

// Page Region Definitions
// 
// Each region cooresponds to a part of the CSS grid, which is used to
// to make the page responsive.

.page-header {
  grid-column: 1 / 5;
  grid-row: 1;
  text-align: center;
}

.menu {
  grid-column: 1 / 5;
  grid-row: 2;
  text-align: center;
}

.color-chooser {
  grid-column: 1;
  grid-row: 3;
  border-color: black;
  border-width: 1px;
}

.design-grid {
  grid-column: 2 / 6;
  grid-row: 3;
  border-color: black;
  border-width: 1px;
}

.page-footer{
  grid-column: 1 / 5;
  grid-row: 4;
  border-color: black;
  border-width: 1px;
  text-align: center;
}

// Individual Page Elements
.menu-item {
  border-color: black;
  border-width: 1px;
}

.color-selection {
  border-color: black;
  border-width: 1px;
  justify-content: center;
}

.recent-color-wrapper {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  grid-gap: 5px;
}

for shade in (90 80 70 60 50)
  .recent-color-{shade} {
    grid-column: 1fr;
    grid-row: 1fr;
    background-color: hsl(0, 0%, shade + '%');
    border-color: black;
    border-width: 1px;
  }
